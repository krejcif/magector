{
  "name": "magector",
  "version": "1.0.0",
  "description": "Magento source code indexer with ruvector and MCP server",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "magector": "./src/cli.js"
  },
  "scripts": {
    "index": "node src/cli.js index",
    "search": "node src/cli.js search",
    "mcp": "node src/mcp-server.js",
    "start": "node src/mcp-server.js",
    "validate": "node src/validation/validator.js",
    "validate:verbose": "node src/validation/validator.js --verbose",
    "validate:keep": "node src/validation/validator.js --verbose --keep",
    "benchmark": "node src/validation/benchmark.js",
    "test": "node tests/mcp-server.test.js",
    "test:no-index": "node tests/mcp-server.test.js --no-index"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.10",
    "ora": "^8.0.1",
    "ruvector": "^0.1.96"
  },
  "keywords": [
    "magento",
    "indexer",
    "vector-search",
    "mcp",
    "claude-code"
  ]
}
